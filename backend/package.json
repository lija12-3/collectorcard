{
  "name": "@cardinal/core",
  "version": "1.0.0",
  "description": "Cardinal - Microservices platform built with NestJS and AWS Lambda",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:libs && npm run build:services",
    "build:libs": "npm run build --workspaces --if-present",
    "build:services": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "deploy": "npm run deploy:all",
    "deploy:all": "npm run deploy --workspaces --if-present",
    "index-cti": "node scripts/index-cti.js",
    "clean": "rimraf dist node_modules/.cache",
    "prebuild": "npm run clean"
  },
  "workspaces": [
    "backend/apps/*",
    "backend/libs/*"
  ],
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-lambda": "^1.0.0",
    "@types/node": "^20.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.4.0"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1500.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "@aws-sdk/client-ses": "^3.450.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "@aws-sdk/client-kms": "^3.450.0",
    "@aws-sdk/client-secrets-manager": "^3.450.0",
    "serverless": "^3.35.0",
    "serverless-offline": "^13.0.0",
    "serverless-plugin-typescript": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nestjs",
    "microservices",
    "aws-lambda",
    "serverless",
    "typescript"
  ],
  "author": "Cardinal Team",
  "license": "MIT"
}
