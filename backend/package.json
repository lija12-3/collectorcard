{
  "name": "@cardinal/core",
  "version": "1.0.0",
  "description": "Cardinal - Microservices platform built with NestJS and AWS Lambda",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run generate-index && npm run build:services",
    "build:services": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "deploy": "npm run deploy:all",
    "deploy:all": "npm run deploy --workspaces --if-present",
    "generate-index": "cti --config cti.config.json",
    "clean": "rimraf dist node_modules/.cache",
    "prebuild": "npm run clean"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@types/node": "^20.0.0",
    "aws-serverless-express": "^3.4.0",
    "create-ts-index": "^1.14.0",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.450.0",
    "@aws-sdk/client-secrets-manager": "^3.450.0",
    "@aws-sdk/client-ses": "^3.450.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1500.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "serverless": "^3.35.0",
    "serverless-offline": "^13.0.0",
    "serverless-plugin-typescript": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nestjs",
    "microservices",
    "aws-lambda",
    "serverless",
    "typescript"
  ],
  "author": "Cardinal Team",
  "license": "MIT"
}
