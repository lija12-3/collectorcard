{
  "name": "@collectorscard/core",
  "version": "1.0.0",
  "description": "Collectors card backend services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:lambdas": "node scripts/build-lambdas.mjs",
    "zip:lambdas": "mkdir -p dist/zips && cd dist/lambdas && for f in *.js; do zip -j ../zips/${f%.js}.zip $f; done",
    "build:api": "tsc -p apps/api/tsconfig.json",
    "start:api": "node apps/api/dist/main.js",
    "start:api:dev": "nest start api --watch",
    "build:api:dev": "nest build api",
    "clean": "rimraf dist node_modules/.cache",
    "prebuild": "npm run clean",
    "lint": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "echo 'Husky hooks are managed from project root'",
    "pre-commit": "lint-staged",
    "pre-commit:full": "node scripts/pre-commit.mjs"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-serverless-express": "^3.4.0",
    "create-ts-index": "^1.14.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.645.0",
    "@aws-sdk/client-dynamodb": "^3.645.0",
    "@aws-sdk/client-kms": "^3.450.0",
    "@aws-sdk/client-secrets-manager": "^3.450.0",
    "@aws-sdk/client-ses": "^3.645.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.645.0",
    "@mikro-orm/cli": "^6.0.0",
    "@mikro-orm/core": "^6.0.0",
    "@mikro-orm/migrations": "^6.0.0",
    "@mikro-orm/nestjs": "^6.0.0",
    "@mikro-orm/postgresql": "^6.5.8",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.0.0",
    "@nestjs/passport": "^11.0.5",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1500.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nestjs",
    "microservices",
    "aws-lambda",
    "serverless",
    "typescript"
  ],
  "author": "Collectors Card Team",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "package*.json": [
      "npm audit --audit-level=moderate"
    ]
  }
}
